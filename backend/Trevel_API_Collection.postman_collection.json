                    "name": "Authentication",
                    "item": [
                        {
                            "name": "Send OTP",
                            "request": {
                                "method": "POST",
                                "header": [
                                    {
                                        "key": "Content-Type",
                                        "value": "application/json"
                                    }
                                ],
                                "body": {
                                    "mode": "raw",
                                    "raw": "{\n  \"phone\": \"+919876543210\",\n  \"name\": \"Test User\"\n}"
                                },
                                "url": {
                                    "raw": "{{baseUrl}}/mobile/auth/send-otp",
                                    "host": [
                                        "{{baseUrl}}"
                                    ],
                                    "path": [
                                        "mobile",
                                        "auth",
                                        "send-otp"
                                    ]
                                },
                                "description": "Send OTP to customer's phone number. Creates customer if doesn't exist."
                            }
                        },
                        {
                            "name": "Verify OTP",
                            "event": [
                                {
                                    "listen": "test",
                                    "script": {
                                        "exec": [
                                            "if (pm.response.code === 200) {",
                                            "    const response = pm.response.json();",
                                            "    if (response.success && response.data.token) {",
                                            "        pm.collectionVariables.set('mobileToken', response.data.token);",
                                            "    }",
                                            "}"
                                        ],
                                        "type": "text/javascript"
                                    }
                                }
                            ],
                            "request": {
                                "method": "POST",
                                "header": [
                                    {
                                        "key": "Content-Type",
                                        "value": "application/json"
                                    }
                                ],
                                "body": {
                                    "mode": "raw",
                                    "raw": "{\n  \"phone\": \"+919876543210\",\n  \"otp\": \"1234\"\n}"
                                },
                                "url": {
                                    "raw": "{{baseUrl}}/mobile/auth/verify-otp",
                                    "host": [
                                        "{{baseUrl}}"
                                    ],
                                    "path": [
                                        "mobile",
                                        "auth",
                                        "verify-otp"
                                    ]
                                },
                                "description": "Verify OTP and get JWT token. Check backend logs for OTP in development."
                            }
                        },
                        {
                            "name": "Resend OTP",
                            "request": {
                                "method": "POST",
                                "header": [
                                    {
                                        "key": "Content-Type",
